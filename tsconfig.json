{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESM",

  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": "./"
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
      "**/node_modules/**",
      "**/dist/**"
  ]
}